     <div id="programs">
            <br>
            <button  class="btn btn-sm btn-danger btn-block"><a href="/home/new">Start new program</a></button>
            <%placements.forEach((p)=>{%>
                <div id="program">
                    <b style="color: yellow;"><%=p.name%></b>
                    <%if(p.status=='OPEN'){%>
                        <button style="float: right;margin-right: 10px;" class="btn btn-sm btn-danger btn-block"> <a href="/home/close?pid=<%=p.pid%>">Close Program </a> </button>
                        <button style="float: right;margin-right: 10px;"  class="btn btn-sm btn-primary btn-block"> <a href="/home/candidates?pid=<%=p.pid%>"> Shortlist participants </a></button>
                        <button style="float: right;margin-right: 10px;" class="btn btn-sm btn-primary btn-block"> <a href="/home/update?pid=<%=p.pid%>">Post updates </a> </button>
                    <%}else{%>
                        <button style="float: right;margin-right: 10px;"  class="btn btn-sm btn-primary btn-block"> <a href="/home/candidates?pid=<%=p.pid%>"> Qualified Candidates </a></button>

                    <%}%><br>
                    STATUS: <b style="color: yellow;"><%=p.status%></b><br>
                    ROUND: <b style="color: yellow;"><%=p.round%></b><br>
                    CODE: <b style="color: yellow;"><%=p.pid%></b><br>
                    
                    <p><%=p.ctc%> LPA , min <%=p.min_cgpa.toFixed(1)%> CGPA <br> <%=p.branches.join(',')%><br><br>
                        <a class="btn btn-sm btn-danger btn-block" href="<%=p.files[0].url%>"><b>Download Broucher</b></a>
                    </p>

                </div>
            <%})%>
        </div>

