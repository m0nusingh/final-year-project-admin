<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/index.css">
    <script src="https://kit.fontawesome.com/42deadbeef.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <nav>
        <input type="checkbox" id="check">
        <label for="check">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/logout">logout</a></li>
        </ul>
    </nav>
    <div class="wrapper">
        <form class="form-signin" action="/home/select-candidates/?pid=<%=program.pid%>" method="POST">       
          <h2 class="form-signin-heading"><%=program.name%></h2> <br> 
          <%program.users.forEach((u)=>{%>
            <%if(u.isSelected){%>
                <div>  <%=u.user.name%> &nbsp; <input name="not_selected[]" value="<%=u.user.uid%>" type="checkbox"> Remove <a href="<%=u.resume_url%>" style="float: right;" class="btn btn-secondary btn-sm">Download Resume</a> </div>
            <%}%>
        <%})%> 
    <br>
        <%if(program.status=='OPEN' &&program.users.length){%>
            <button class="btn btn-lg btn-primary btn-block">Update</button>   

        <%}%>        
    </form>
    </div>

</body>

</html>
</body>

</html>